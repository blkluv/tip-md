{
  "name": "mcp-server",
  "version": "0.0.1",
  "description": "MCP Server for tip.md",
  "type": "module",
  "bin": {
    "mcp-server": "./dist/mcp-server/src/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && npm run copy:database",
    "copy:database": "mkdir -p dist/mcp-server && cp -R database dist/mcp-server/",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "watch": "tsc --watch",
    "start": "node dist/mcp-server/src/index.js",
    "start:prod": "NODE_ENV=production node dist/mcp-server/src/index.js",
    "deploy": "npm run rebuild && npm run start:prod",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@coinbase/cdp-sdk": "^1.16.0",
    "@coinbase/coinbase-sdk": "^0.25.0",
    "@coinbase/x402": "^0.6.0",
    "@solana/kit": "^2.3.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "ethers": "^6.14.4",
    "express": "^5.1.0",
    "mcp-framework": "^0.2.15",
    "mongodb": "^6.0.0",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "viem": "^2.31.3",
    "x402-axios": "^0.6.0",
    "x402-express": "^0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.1",
    "dotenv": "^16.5.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.19.0"
  }
}
